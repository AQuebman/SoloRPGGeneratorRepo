NPC_Generator:
    BoxLayout:   # left side of App
        orientation: 'vertical'   #Orientation is Vertical instead of horizontal
        canvas:
            Color:
                rgb: 0, 255, 0
            Rectangle:
                pos: self.pos
                size: 385, 1100
                        
    	Button:
        	text: 'Generic Generators'
#			text: '[color=ff3333]Unselectable item[/color]' #An example of adding color to the text of the button
            markup: True			
        	height: '50dp'
			size_hint: .4, .005
        	on_parent: drop1.dismiss()
        	on_release: drop1.open(self)           
            
    	DropDown:
        	id: drop1
        	on_select: btn.text = '{}'.format(args[3])   

        	Button:
            	text: 'LOUCHE'
            	size_hint_y: None
            	height: 45
            	on_press: root.clear()
            	on_release: app.Louche_Variable.louche()
            	on_release: drop1.dismiss() 
            	    	
        	Button:
            	text: "Random Name\n    Generator"
            	size_hint_y: None
            	height: 45
            	on_press: root.clear() 
            	on_release: app.Name_Variable.NameGenOrig()
            	on_release: drop1.dismiss()
            	
            Button:
            	text: "Generic Character Generator"
            	size_hint_y: None
            	height: 45
            	on_press: root.clear() 
            	on_release: root.Gen_Char_Gen()
            	on_release: drop1.dismiss()
              	
            Button:
            	text: "Random Monster Generator"
            	size_hint_y: None
            	height: 45
            	on_press: root.clear() 
            	on_release: app.Monster_Variable.MonsterGeneration()
            	on_release: drop1.dismiss()
            	
    	Button:
        	text: 'Dungeon Crawl Classics'
        	height: '50dp'
			size_hint: .4, .005
        	on_parent: drop2.dismiss()
        	on_release: drop2.open(self)  
        	
    	DropDown:
        	id: drop2
        	on_select: btn.text = '{}'.format(args[1])

        	Button:
            	text: 'Character Generator'
            	size_hint_y: None
            	height: 45
            	on_press: root.clear() 
            	on_release: app.DCC_Variable.DCCCharacterGenerator()
            	on_release: drop2.dismiss()
            	           
    	Button:
        	text: 'Scarlet Heroes'
        	height: '50dp'
			size_hint: .4, .005
        	on_parent: drop_content.dismiss()
        	on_release: drop_content.open(self)           
            
    	DropDown:
        	id: drop_content
        	on_select: btn.text = '{}'.format(args[1])   

        	Button:
            	text: 'First Item'
            	size_hint_y: None
            	on_release: dropdown.select('First Item')
            	
    	Button:
        	text: 'Drop 4'
        	height: '50dp'
			size_hint: .4, .005
        	on_parent: drop4.dismiss()
        	on_release: drop4.open(self) 
        	
    	DropDown:
